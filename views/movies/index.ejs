<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <%- include ('../partials/nav.ejs') %>
    </nav>
    <div class="container">
      <h1>Movies Index Page</h1>
      <ul>
        <% for (let movie of movies ) { %>
          <li>
            <a href="/movies/<%=movie._id%>">
              <%= movie.title %></br>
              <img src="<%= movie.cover %>"></a>
          </li>
       <% } %>
      </ul>
    </div>
  </body>
</html>
